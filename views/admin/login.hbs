<form action="/min/login" method="POST" align="center" class="col-md-4 mx-auto mt-5">
    <h2 class="px-auto" align='center'><b>WELCOME TO ADMIN PAGE</b> </h2>

    {{#if adminloginErr}}
    <p class="text-danger error">{{adminloginErr}}</p>
    
    {{/if}}
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" autofocus class="form-control" name='email' id="exampleInputEmail1" placeholder="Enter email">
      </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password">
  </div>
    

  <button type="submit" class="btn btn-primary">Submit</button>
</form>