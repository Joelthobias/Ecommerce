<section>
        <div class="container">

                <div class="row mt-3 container">
                        <h1 class="mx-auto"> <b> View-products </b> </h1>
                        <a class="btn btn-success m-3 ml-auto" href="/admin/add-product">Add product</a>
                </div>
                <table class="table  mt-4">

                        <thead>
                                <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Catagory</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Image</th>
                                        <th> </th>
                                </tr>
                        </thead>
                        <tbody>
                                {{#each products}}
                                        <tr>
                                                <th scope="row">1</th>
                                                <td>{{this.name}} </td>
                                                                                                <td>{{this.price}} </td>
                                                <td>{{this.catagory}}</td>
                                                <td>{{this.description}} </td>

                                                <td><img src="/product-images/{{this._id}}.jpg" height="100px" srcset=""> </td>
                                                <td>
                                                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a> 
                                                        <a href="/admin/delete-product/{{this._id}}" onclick="return confirm('are you sure')" class="btn btn-danger">Delete</a>
                                                        
                                                </td>
                                               
                                        </tr>
                                {{/each}}
                                {{!-- {{this._id}} --}}
                        </tbody>
                </table>
        </div>
</section>