<form action="/login" method="POST" align="center" class="col-md-4 mx-auto mt-5">
    <h2 class="px-auto" align='center'><b>LOGIN</b> </h2>

{{#if userloginErr}}

    <p class="text-danger error">{{userloginErr}}</p>
    
  {{/if}}
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" autofocus class="form-control" name='email'id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password">
  </div>
    <div class="form-group ">
        <small id="emailHelp" class="form-text text-muted">
          <a href="/signin">Need a Account</a>
        </small>
     
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>